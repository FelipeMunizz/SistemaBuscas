@model SistemaBuscas.Models.Debito

@{
    ViewData["Title"] = "Débitos - Antão Fernandes & Associados LTDA";
}

<h1>Editar Débito Automático</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DebitoId" />
            <div class="form-group">
                <label asp-for="Imovel" class="control-label">Imóvel / Pessoa</label>
                <input asp-for="Imovel" class="form-control" />
                <span asp-validation-for="Imovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa" class="control-label"></label>
                <input asp-for="Empresa" class="form-control" />
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servico" class="control-label"></label>
                <input asp-for="Servico" class="form-control" />
                <span asp-validation-for="Servico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDeb" class="control-label"></label>
                <input asp-for="NumeroDeb" class="form-control" />
                <span asp-validation-for="NumeroDeb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
